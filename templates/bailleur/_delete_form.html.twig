<form method="post" action="{{ path('bailleur_delete', {'id': bailleur.id}) }}" onsubmit="return confirm('Vous voulez supprimer cet bailleur?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ bailleur.id) }}">
    <button class="btn btn-danger"><span class="glyphicon glyphicon-trash">_</span>Supprimer</button>
</form>
