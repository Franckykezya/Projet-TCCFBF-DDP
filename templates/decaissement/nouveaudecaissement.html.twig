{% extends 'base.html.twig' %}

{% block title %}décaissement cummulé{% endblock %}

{% block body %}
    <!-- BOOTSTRAP STYLES-->
    <link href="../assets/css/bootstrap.css" rel="stylesheet" />
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="../assets/js/bootstrap.min.js"></script>

    <div class="row">
        <div class="col-md-3"><a href="{{ path('affiche_bailleur', {'id': projetId}) }}"> <center>Retour</center> </a></div>
        <div class="col-md-9">  <h1> Nouveau décaissement </h1> </div>
    </div>
    

    <div class="col-md-12">

        <div class="col-md-3">

        </div>

        <div class="col-md-6">
            {#ato ni form#}
            {{ form_start(formhistorique) }}

                {{ form_row(formhistorique.hi_montant_accord, {'label' : 'Montant à décaisser'}) }}
                {{ form_row(formhistorique.hi_date, {'label' : 'Date de décaissement'}) }}

            <div class="form-row align-items-end pull-right">

                <button type="Submit" class="btn btn-info pull-right" name="" id="" value="">
                    <span class="glyphicon glyphicon-floppy-saved">_</span>Enregistrer
                </button>

            </div>
            {{ form_end(formhistorique) }}
        </div>

        <div class="col-md-3">

        </div>

    </div>

    <div class="container">
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="table-info">
                    <th class="text-center">Date</th>
                    <th class="text-center">Montant</th>
                    <th class="text-center">Equivalent usd</th>
                    <th class="text-center">taux</th>
                    <th class="text-center">Rest à décaisser</th>
                    <th class="text-center">Rest à décaisser usd</th>

                </tr>

            </thead>
            <tbody>
                {% for historiquetab in historiquetabs %}
                    <tr class="text-center">
                        <td>{{ historiquetab.HiDate |date("d/m/Y") }}</td>
                        <td>{{ historiquetab.HiMontantAccord }}</td>
                        <td>{{ historiquetab.HiEquivalentUsd | round(2, 'floor')  }}</td>
                        <td>{{ historiquetab.HiTaux | round(2, 'floor')  }}</td>
                        <td>{{ historiquetab.HiResteDecaisser | round(2, 'floor') }}</td>
                        <td>{{ historiquetab.HiResteDecaisserUsd  | round(2, 'floor') }}</td>

                    </tr>
                {% endfor %}

            </tbody>
        </table>

    </div>

    {#
    <div class="form-row align-items-end">

        <div class="form-row align-items-end">

            <div class="form-group">

            </div>
        </div>

    </div>

    #}



{% endblock %}
