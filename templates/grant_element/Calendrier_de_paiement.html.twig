{% extends 'base.html.twig' %}

{% block title %}GrantElementController!{% endblock %}
 {% block stylesheets %}
      <style>
        .title{
            color : rgba(100, 45, 0 , 0.3);
            text-align : center;
        }
        .bg-danger{
            background: rgb(96,34,195);
background: linear-gradient(0deg, rgba(96,34,195,0.7539390756302521) 0%, rgba(253,45,70,0.8799894957983193) 100%);
            
        }
        th{
            text-align : center;
            margin : 10px 10px 10px 10px;
        }
        td{
             text-align : center;
        }
      </style>
 {% endblock %}
{% block body %}
<div id="wrapper">
    <div id="page-wrapper" >
        <div id="page-inner">
            <h1 class="title">Calendrier de paiement</h1>

            <table class = "table table-striped table-dark" border = "2">
                <thead>
                    <tr class="bg-danger">
                        <th>Remaining payments</th>
                        <th>Interest rate per period<br>fixed or variable</th>
                        <th>Payments per period</th>
                        <th>Frees</th>
                        <th>Interest</th>
                        <th>Pricipal</th>
                        <th>Outstanding</th>
                    </tr>
                </thead>
                <tbody>         
                                        
                                            {% for key in tabs[1]|keys %}
                                               <tr>
                                                    {% for i,val in tabs %}
                                                        {% if i == 1 %}
                                                            <td>{{val[key]}} %</td>
                                                        {% else %}
                                                            <td>{{val[key]}}</td>
                                                        {% endif %}

                                                    {% endfor %}
                                               </tr> 
                                            {% endfor %} 
                                            
                       
                </tbody>
            </table>
        </div>  
    </div>
</div>
{% endblock %}
