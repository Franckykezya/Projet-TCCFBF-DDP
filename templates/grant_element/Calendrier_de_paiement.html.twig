{% extends 'base.html.twig' %}

{% block title %}GrantElementController!{% endblock %}
 {% block stylesheets %}
      <style>
        .title{
            color : rgba(100, 45, 0 , 0.3);
            text-align : center;
        }
        .bg-danger{
            background: rgb(0,0,0);
            /*background: linear-gradient(0deg, rgba(0,0,0,0.7539390756302521) 0%, rgba(247,0,0,0.7595413165266106) 83%);*/
            color : white;
        }
        th{
            text-align : center;
            margin : 10px 10px 10px 10px;
        }
        td{
             text-align : center;
        }
      </style>
 {% endblock %}
{% block body %}
<div id="wrapper">
    <div id="page-wrapper" >
        <div id="page-inner">
            <h1 class="title">Calendrier de paiement</h1>

            <table class = "table table-striped table-dark" border = "2">
                <thead>
                    <tr class="bg-danger">
                        <th>Remaining payments</th>
                        <th>Interest rate per period<br>fixed or variable</th>
                        <th>Payments per period</th>
                        <th>Fees</th>
                        <th>Interest</th>
                        <th>Pricipal</th>
                        <th>Outstanding</th>
                    </tr>
                </thead>
                <tbody>         
                                        
                    {% for key in tabs[1]|keys %}
                       <tr>
                            {% for i,val in tabs %}
                                {% if i == 0 %}
                                    <td>{{val[key]}}</td>
                                {% endif %}
                                {% if i == 1 %}
                                    <td>{{val[key]}} %</td>
                                {% endif %}
                                {% if i == 2%}
                                    <td>{{ val[key] | number_format(0,',','') }}</td>
                                {% endif %}
                                {% if i == 3%}
                                    <td>{{ val[key] }}</td>
                                {% endif %}
                                {% if i == 4%}
                                    <td>{{ val[key] | number_format(0,',','') }}</td>
                                {% endif %}
                                {% if i == 5%}
                                    <td>{{ val[key] }}</td>
                                {% endif %}
                                {% if i == 6%}
                                    <td>{{ val[key] }}</td>
                                {% endif %}
                            {% endfor %}
                       </tr> 
                    {% endfor %}      

                </tbody>
            </table>
        </div>  
    </div>
</div>
{% endblock %}
