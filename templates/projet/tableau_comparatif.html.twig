{% block body %}
    <div id="" >
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <center>
                            <h2>Tableau comparatif des projets avec les bailleurs de fond</h2>   
                            <h5>Ce tableau repr√©sente les comparaisons des projets de bailleur fond.</h5>
                         </center>
                         
                        <div class="row">

                            {# {{form_start(form)}}
                                <form class="form-inline my-2 my-lg-0">
                                    {{ form_row(form.nombailleur, {'label' : "Nom du bailleur", 'attr' : {'placeholder':"Nom bailleur"}}) }} 
