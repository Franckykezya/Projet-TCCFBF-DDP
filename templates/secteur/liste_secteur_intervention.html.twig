{% extends 'base.html.twig' %}

{% block title %}Secteur d'itervention{% endblock %}

{% block body %}
    <center> <h1> Liste des secteur d'intervention</h1></center>

<div class="col-md-12">

        <div class="col-md-3">
        
        </div>

        <div class="col-md-6">

        <table class="table table-striped">
            <thead>
                <tr class="table-info">       
                    <th scope="col">Nom</th>  
                    <th scope="col">Actions</th> 
                </tr>
            </thead>
            <tbody>
            {% for secteur in secteurs %}
                <tr>
                    <td>{{ secteur.nom }}</td>
                        <td>
                        <div class="form-row align-items-end">
                            <a href="{{ path('secteur_editer', {'id': secteur.id}) }}" class="btn btn-info"><span class="glyphicon glyphicon-edit">_</span>Modifier</a>                
                            &nbsp; &nbsp; &nbsp;
                            <form method="post" action="{{ path('secteur_delete', {'id': secteur.id}) }}" onsubmit="return confirm('Vous voulez supprimer ce secteur');">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ secteur.id) }}">
                                <button class="btn btn-danger"><span class="glyphicon glyphicon-trash">_</span>Supprimer</button>
                            </form>     
                        </div>
                        </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun secteur...</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
     </div>

    <div class="col-md-3">
        
    </div>
</div>

    <center>
        <a href="{{ path('create_secteur_intervention') }}" class="btn btn-success"><span class="glyphicon glyphicon-plus">_</span>Ajout secteur</a>
    </center>

{% endblock %}

